{
  "compilerOptions": {

    // ignore type for now
    "noImplicitAny": false,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["jest"],
    // 
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext", // commonJS
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx", //preserve
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/__test__/AlertModal.test.tsx"],
  "exclude": ["node_modules"]
}
